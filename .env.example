# FastBB Environment Configuration Template
# Copy this file to .env and configure for your environment

# Application Settings
NODE_ENV=development
PORT=8080

# Database Configuration (SQLite - built-in)
DB_PATH=./data/fastbb.db

# Security Configuration
# WARNING: Generate a secure secret for production!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# Site Configuration
SITE_NAME=FastBB Forum
SITE_URL=http://localhost:8080
ADMIN_EMAIL=admin@localhost

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SEARCH=true
ENABLE_DARK_MODE=true

# Pagination
POSTS_PER_PAGE=20
TOPICS_PER_PAGE=20

# Default Theme
DEFAULT_THEME=default

# Allowed Origins (comma-separated)
# In production, specify your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000

# Optional: PostgreSQL Configuration (for production scaling)
# Uncomment these if using PostgreSQL instead of SQLite
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fastbb
# DB_USER=postgres
# DB_PASSWORD=your-secure-password

# Optional: Redis Configuration (for production caching)
# Uncomment these if using Redis for distributed caching
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: SMTP Configuration (for email features)
# Uncomment and configure if you need email notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# FROM_EMAIL=noreply@example.com

# Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,txt
